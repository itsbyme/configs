# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

# >>> GENERAL CONFIGURATION <<<
general {
    output_format   = "i3bar"
    colors          = true
    interval        = 1
    color_good      = "#00ff00"
    color_bad       = "#ff0000"
    color_degraded  = "#ffff00"
}

# >>> SET ORDER OF MODULES <<<
order += "wireless wlo1"
order += "ethernet eno1"
order += "battery 0"
order += "volume master"
order += "time"

# >>> SET wireless wlo1 MODULE <<<
wireless wlo1 {
    format_up   = "wlo1: %essid(%ip)"
    format_down = "wlo1: down"
}

# >>> SET ethernet eno1 MODULE <<<
ethernet eno1 {
    format_up   = "eno1: %ip"
    format_down = "eno1: down"
}

# >>> SET battery 0 MODULE <<<
battery 0 {
    format                      = "battery: %percentage(%status)"
    format_down                 = "battery: no"
    status_chr                  = "⚡"
    status_unk                  = "?"
    status_full                 = "FULL"
    integer_battery_capacity    = true
    low_threshold               = 10
    threshold_type              = "percentage"
}

# >>> SETUP OF volume master MODULE <<<
volume master {
    format          = "vol: %volume"
    format_muted    = "vol: muted(%volume)"
}

# >>> SETUP OF time MODULE <<<
time {
    format = "%Y-%m-%d|%H:%M"
}

